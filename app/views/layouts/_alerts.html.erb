<script>
    function hide_alert(){
        document.getElementById("alertContainer").style.display = "none"
    }
</script>
<div id ="alertContainer" class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick = hide_alert()><span aria-hidden="true">&times;</span></button>
      <strong><%= key == 'danger' ? 'Error' : key.capitalize %>:</strong> <%= value %>
    </div>
  <% end %>
  <% flash.discard %>
</div>

