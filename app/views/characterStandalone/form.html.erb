<%= form_for :generate_log, url: :generate_log do |form| %>
  <div class ="form-group">
    <%= form.label :characterName, 'Enter your character name' %>
    <%= form.text_field :characterName, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :characterRace, 'Enter your character race' %>
    <%= form.text_field :characterRace, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :characterLevel, 'Enter your character level' %>
    <%= form.number_field :characterLevel, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :characterClass, 'Enter your character class' %>
    <%= form.text_field :characterClass, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :questName, 'Enter the quest name'%>
    <%= form.text_field :questName, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :cp, 'Enter current character cp' %>
    <%= form.number_field :cp, :class => "form-control", :required => true %>
  </div>

  <div class ="form-group">
    <%= form.label :magicItemTp, 'Enter magic item tp' %>
    <%= form.number_field :magicItemTp, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :magicItemTpNeeded, 'Enter tp needed for magic item' %>
    <%= form.number_field :magicItemTpNeeded, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :gpTotal, 'Enter total character gp' %>
    <%= form.number_field :gpTotal, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :questCpGained, 'Enter cp gained on quest' %>
    <%= form.number_field :questCpGained, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :questTpGained, 'Enter tp gained on quest' %>
    <%= form.number_field :questTpGained, :class => "form-control", :required => true %>
  </div>
  <div class ="form-group">
    <%= form.label :questGpGained, 'Enter gp gained on quest' %>
    <%= form.number_field :questGpGained, :class => "form-control", :required => true %>
  </div>
  <%= form.submit 'Generate Log', :class => "btn btn-primary" %>
<% end  %>
