<%= form_for(character) do |f| %>
  <% if character.errors.any? %>
    <div class="form-group">
      <h2><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% character.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control",:required => true %>
  </div>

  <div class="form-group">
    <%= f.label :race %>
    <%= f.text_field :race, :class => "form-control",:required => true %>
  </div>

  <div class="form-group">
    <%= f.label :level %>
    <%= f.number_field :level, :class => "form-control",:required => true %>
  </div>

  <div class="form-group">
    <%= f.label :cp %>
    <%= f.text_field :cp, :class => "form-control",:required => true %>
  </div>

  <div class="form-group">
    <%= f.label :gp %>
    <%= f.text_field :gp, :class => "form-control",:required => true %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-outline-dark" %>
  </div>
<% end %>
