<p>
  <strong>Name:</strong>
  <%= @character.name %>
</p>

<p>
  <strong>Race:</strong>
  <%= @character.race %>
</p>

<p>
  <strong>Level:</strong>
  <%= @character.level %>
</p>

<p>
  <strong>CP:</strong>
  <%= @character.cp %>
</p>

<p>
  <strong>GP:</strong>
  <%= @character.gp %>
</p>
<%= link_to 'Edit Your Character', edit_character_path(@character), :class => "btn btn-outline-dark" %>
<%= link_to 'Add New Quest', :new_quest,:id => @character.id, :class => "btn btn-outline-dark" %>

<p class="h2">Your Items</p>

<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Cost</th>
    <th scope="col">Remove Item</th>
  </tr>
  </thead>
  <tbody>
<% @items.each do |item| %>
    <tr>
      <td><%=item.item.name %></td>
      <td><%=item.item.cost %></td>
      <td><%= link_to 'Remove Item', remove_owned_item_path(item.id),  :class => 'badge badge-danger', method: :delete,  data: { confirm: 'This will remove item from your inventory, are you sure?' } %></td>
    </tr>
<% end %>
  </tbody>
</table>
<%= link_to 'Buy New', :purchase_item_form ,:id => @character.id, :class => "btn btn-outline-dark" %>

<p class="h2">Your Magic Items</p>
<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Applied TP</th>
    <th scope="col">Required TP</th>
    <th scope="col">Remove Item</th>
  </tr>
  </thead>
  <tbody>
<% @character_magic_items.each do |item| %>
  <tr>
    <td><%= item.magic_item.name %></td>
    <td><%= item.applied_tp %></td>
    <td><%= item.magic_item.tp %></td>
    <td><%= link_to 'Remove Item', remove_owned_magic_item_path(item.id),  :class => 'badge badge-danger', method: :delete,  data: { confirm: 'This will remove item, and any applied TP, are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>
<% if @magicItems.length >= 6 %>
  <p>You Have Six Magic Items and wont be able to add more</p>
<% else %>
  <%= link_to 'Add New', :purchase_magic_item_form, :id => @character.id, :class => "btn btn-outline-dark" %>
<% end %>

<%= link_to 'Back', characters_path, :class => "btn btn-outline-dark" %>

