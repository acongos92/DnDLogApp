<%= form_for @item, url: :purchase_item_transaction do |f| %>

  <div class ="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :class => "form-control" %>
  </div>

  <div class ="form-group">
    <%= f.label :cost %>
    <%= f.text_field :cost, :required => true, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back To Character Page', @character, :class => "btn btn-outline-dark" %>
